{
  "name": "iptv-org.github.io",
  "type": "module",
  "private": true,
  "scripts": {
    "act:update": "act workflow_dispatch -W .github/workflows/update.yml",
    "api:load": "tsx src/commands/api/load.ts",
    "dev": "cross-env NODE_OPTIONS=--max_old_space_size=5096 vite dev --host",
    "build": "cross-env NODE_OPTIONS=--max_old_space_size=5096 vite build",
    "preview": "vite preview --host",
    "prepare": "svelte-kit sync",
    "postinstall": "npm run api:load",
    "postbuild": "npx svelte-sitemap -d https://iptv-org.github.io -o docs",
    "test": "vitest run",
    "lint": "eslint"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@freearhey/core": "^0.15.0",
    "@iptv-org/sdk": "^1.1.2",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.49.1",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/vite": "^4.1.17",
    "@types/cli-progress": "^3.11.6",
    "@types/qs": "^6.14.0",
    "@zerodevx/svelte-toast": "^0.9.6",
    "cli-progress": "^3.12.0",
    "country-flag-icons": "^1.6.4",
    "cross-env": "^10.1.0",
    "dayjs": "^1.11.19",
    "eslint": "^9.39.1",
    "eslint-plugin-svelte": "^3.13.0",
    "globals": "^16.5.0",
    "iptv-playlist-generator": "^0.1.5",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^5.45.3",
    "svelte-simple-modal": "^2.0.0",
    "svelte-sitemap": "^2.7.1",
    "tailwind-scrollbar-hide": "^4.0.0",
    "tailwindcss": "^4.1.17",
    "tippy.js": "^6.3.7",
    "tsx": "^4.20.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.2.6",
    "vite-plugin-mkcert": "^1.17.9",
    "vitest": "^4.0.14"
  }
}
