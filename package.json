{
  "name": "iptv-org.github.io",
  "type": "module",
  "private": true,
  "scripts": {
    "act:update": "act workflow_dispatch -W .github/workflows/update.yml",
    "api:load": "tsx ./src/commands/api/load.ts",
    "dev": "vite dev --host",
    "build": "run-script-os",
    "build:win32": "SET \"NODE_OPTIONS=--max_old_space_size=4096\" && vite build",
    "build:default": "NODE_OPTIONS=--max_old_space_size=4096 vite build",
    "preview": "vite preview --host",
    "prepare": "svelte-kit sync",
    "postinstall": "npm run api:load",
    "postbuild": "npx svelte-sitemap -d https://iptv-org.github.io -o docs",
    "test": "vitest run"
  },
  "devDependencies": {
    "@freearhey/core": "^0.10.2",
    "@freearhey/search-js": "^0.2.0",
    "@sveltejs/adapter-static": "^3.0.8",
    "@sveltejs/kit": "^2.26.1",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/vite": "^4.1.3",
    "@types/qs": "^6.9.18",
    "@zerodevx/svelte-json-view": "^1.0.11",
    "@zerodevx/svelte-toast": "^0.9.6",
    "axios": "^1.11.0",
    "axios-mock-adapter": "^2.1.0",
    "cli-progress": "^3.12.0",
    "dayjs": "^1.11.1",
    "iptv-playlist-generator": "^0.1.5",
    "lodash": "^4.17.21",
    "numeral": "^2.0.6",
    "prettier-plugin-svelte": "^3.3.3",
    "qs": "^6.11.2",
    "run-script-os": "^1.1.6",
    "svelte": "^5.37.1",
    "svelte-simple-modal": "^2.0.0",
    "svelte-sitemap": "^2.6.0",
    "sveltejs-tippy": "^3.0.0",
    "tailwind-scrollbar-hide": "^4.0.0",
    "tailwindcss": "^4.1.3",
    "tsx": "^4.20.3",
    "validator": "^13.11.0",
    "vite": "^7.0.6",
    "vite-plugin-mkcert": "^1.17.8",
    "vitest": "^3.1.1"
  }
}
